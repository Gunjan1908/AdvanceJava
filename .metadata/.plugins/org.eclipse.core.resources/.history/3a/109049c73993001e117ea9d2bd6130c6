package com.app.springboot.thymeleafdemo.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.app.springboot.thymeleafdemo.model.Employee;

@Controller
@RequestMapping("/employees")
public class EmployeeController {

	@GetMapping("/list")
	public String listEmployee(Model model)
	{
		Employee e1 = new Employee(1,"Avinash","kadam","avinash@gmail.com");
		Employee e2 = new Employee(2,"Dhruv","barke","dhruv@gmail.com");
		Employee e3 = new Employee(3,"Kishori","attarde","Kishori@gmail.com");
		Employee e4 = new Employee(4,"Rahul","Pawar","rahul@gmail.com");
		
		List<Employee> l = new ArrayList<>();
		l.add(e1);
		l.add(e2);
		l.add(e3);
		l.add(e4);
		
		model.addAttribute("employees", l);
		return "list-employees";
		
		
	}
	
	
}
